<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:orientation="vertical"
    tools:context=".OnBoarding.OnBoardFragments.SecondFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                app:tint="?attr/colorOnPrimary"
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/circle_blank" />

            <ImageView
                app:tint="?attr/colorOnPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:src="@drawable/circle_filled" />

            <ImageView
                app:tint="?attr/colorOnPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:src="@drawable/circle_blank" />

        </LinearLayout>

        <TextView
            android:textColor="?attr/colorOnPrimary"
            android:id="@+id/skip_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:onClick="skipCall"
            android:text="@string/skip_name" />
    </RelativeLayout>

    <TextView
        style="@style/Widget.Kreastol.Text.Heading1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginTop="88dp"
        android:text="@string/fragment2_title_name"
        android:textColor="?attr/colorOnPrimary" />

    <TextView
        style="@style/Widget.Kreastol.Text.Body1"
        android:textColor="?attr/colorOnPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:text="@string/fragment2_description_name"
        android:textAlignment="center" />

    <ImageView
        app:tint="?attr/colorOnPrimary"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="92dp"
        android:src="@drawable/post_icon" />

</LinearLayout>